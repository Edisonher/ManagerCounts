<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jacobo.managercounts.FragmentoInfoclientes"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Infonombre"
            android:text="@string/nombre"
            android:textSize="25sp"
            android:textAlignment="center"
            />

    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:id="@+id/Infodireccion"
            android:text="@string/direccion"
            android:textSize="25sp"
            android:textAlignment="center"
            />
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/maps"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Infotelefono"
            android:text="@string/telefono"
            android:textSize="25sp"
            android:textAlignment="center"
            />
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Infobarrio"
            android:text="@string/barrio"
            android:textSize="25sp"
            android:textAlignment="center"
            />
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eValorabono"
            android:hint="@string/abono"
            android:textSize="25sp"
            android:textAlignment="center"
            />
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Infosaldo"
            android:text="@string/saldo"
            android:textSize="25sp"
            android:textAlignment="center"
            />
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/compras"
            android:textAlignment="center"
            android:layout_gravity="center"/>
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/ventas"
            android:textAlignment="center"
            android:layout_gravity="center"/>



    </LinearLayout>


</LinearLayout>
